<div class="blog-search-container">
  <div class="blog-search-input-group">
    <input type="text" id="blog-search-input" placeholder="Search posts by title, content, tags..." aria-label="Search blog posts">
    <button id="blog-search-clear" type="button" aria-label="Clear search">
      <i class="fa-solid fa-xmark"></i>
    </button>
    <button id="blog-search-submit" type="button" aria-label="Search">
      <i class="fa-solid fa-search"></i>
    </button>
  </div>
  <div id="blog-search-loading" class="search-loading">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    <span>Loading search results...</span>
  </div>
  <div id="blog-search-results"></div>
</div> 